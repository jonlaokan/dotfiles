#! /bin/bash 

scaling=0.75x0.675
scaling2=0.75x0.675

if (( $# < 1 )); then
    echo "Usage : $(basename $0) [up][down]" >&2
fi

case $1 in
    up)
	xrandr --output eDP-1 --auto --scale ${scaling2} --output HDMI-2 --auto --right-of eDP-1
	~/.fehbg
	;;
    down)
	xrandr --output HDMI-2 --off
	;;
esac

exit 0
